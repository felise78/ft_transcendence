# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Docker-compose PostgreSQL settings
POSTGRES_DB=transcendence_db
POSTGRES_USER=transcendence_user
POSTGRES_PASSWORD=your_secure_password_here

# Django database connection
DB_NAME=transcendence_db
DB_USER=transcendence_user
DB_PASSWORD=your_secure_password_here
DB_HOST=postgres_db
DB_PORT=5432

# Host IP for remote players (auto-set by Makefile)
HOST_IP=localhost

# ==============================================
# DJANGO CONFIGURATION
# ==============================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-django-secret-key-here-generate-a-new-one

# JWT signing key for authentication
JWT_SIGNIN_KEY=your-jwt-signing-key-here

# Django settings module
DJANGO_SETTINGS_MODULE=transcendence.settings

# ==============================================
# EMAIL CONFIGURATION (for OTP)
# ==============================================
# SMTP settings for email OTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# ==============================================
# 42 OAUTH CONFIGURATION
# ==============================================
# Create your 42 app at: https://profile.intra.42.fr/oauth/applications
# Redirect URI should be: http://localhost:8000/auth/42/callback/
API_42_UID=your-42-client-id-here
API_42_SECRET=your-42-client-secret-here